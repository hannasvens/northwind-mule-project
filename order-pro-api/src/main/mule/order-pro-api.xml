			<http:query-params ><![CDATA[#[{	"shipperID": "vars.shipperID",
	"dateAccepted": "vars.dateAccepted",
	"offerID": "vars.offerID"
	}]]]></http:query-params>
		</http:request>
		<set-variable value="#[message.shippingDate]" doc:name="shippingDate" doc:id="d2416158-bf73-41ca-be5f-b0a1ba91ead1" variableName="shippingDate"/>
		<db:select doc:id="fafaffbf-bfb5-4794-ab15-cde4002ddfb1" config-ref="Database_Config">
			<db:sql ><![CDATA[SELECT offers.DateApproved
FROM offers
WHERE offerID = :offerID ]]></db:sql>
		</db:select>
		<flow-ref doc:name="Flow Reference -  createOrder" doc:id="5c45efbb-3973-41c3-9cd3-af1a7c038473" name="createOrder"/>
	</flow>
	<flow name="createOrder" doc:id="4a430c34-75e2-4bdd-b176-b1ce7dafdd97" >
